{
  "name": "china-pmf-monitoring-system",
  "version": "1.0.0-china",
  "description": "中国社交媒体PMF监控系统 - 专注于PMF阶段中国初创企业的投资信号发现和分析",
  "main": "dist/index.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build && tsc",
    "start": "node dist/index.js",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "test": "jest",
    "test:watch": "jest --watch",
    "db:setup": "chmod +x scripts/db-setup.sh && ./scripts/db-setup.sh",
    "db:migrate": "npx prisma migrate dev",
    "db:migrate:deploy": "npx prisma migrate deploy",
    "db:seed": "npx tsx prisma/seed.ts",
    "db:studio": "npx prisma studio",
    "db:reset": "npx prisma migrate reset",
    "db:generate": "npx prisma generate",
    "db:push": "npx prisma db push",
    "china-monitor": "ts-node src/services/chinaMonitoringService.ts",
    "pmf-detect": "ts-node src/algorithms/chinaPMFDetection.ts",
    "xiaohongshu-scan": "ts-node src/scanners/xiaohongshuScanner.ts",
    "docker:build": "docker build -t china-pmf-monitor .",
    "docker:run": "docker-compose up -d",
    "demo:xiaohongshu": "curl 'http://localhost:3001/api/china-monitoring/search-pmf?platforms=xiaohongshu&tags=#MVP,#产品验证&minScore=6.0'",
    "demo:report": "curl 'http://localhost:3001/api/china-monitoring/generate-report?days=7&minScore=6.0'"
  },
  "keywords": [
    "china",
    "pmf",
    "social-media",
    "monitoring",
    "investment",
    "startup",
    "xiaohongshu",
    "zhihu",
    "weibo",
    "douyin",
    "ai-analysis",
    "typescript"
  ],
  "author": "LaunchX China Investment Team",
  "license": "MIT",
  "dependencies": {
    "@langchain/openai": "^0.3.0",
    "@langchain/community": "^0.3.0",
    "@prisma/client": "^5.20.0",
    "axios": "^1.7.0",
    "cheerio": "^1.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.0",
    "express": "^4.19.0",
    "langchain": "^0.3.0",
    "next": "^15.0.0",
    "node-cron": "^3.0.3",
    "puppeteer": "^23.0.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "redis": "^4.7.0",
    "decimal.js": "^10.4.3",
    "zod": "^3.22.4",
    "pg": "^8.11.3",
    "jsonwebtoken": "^9.0.2",
    "bcrypt": "^5.1.1",
    "date-fns": "^2.30.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.0",
    "@types/node": "^22.0.0",
    "@types/node-cron": "^3.0.11",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@types/pg": "^8.10.9",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/bcrypt": "^5.0.2",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "eslint-config-next": "^15.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "prisma": "^5.20.0",
    "tailwindcss": "^3.4.0",
    "ts-jest": "^29.2.0",
    "ts-node": "^10.9.0",
    "tsx": "^4.7.0",
    "typescript": "^5.6.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/launchx/china-pmf-monitoring-system.git"
  },
  "bugs": {
    "url": "https://github.com/launchx/china-pmf-monitoring-system/issues"
  },
  "homepage": "https://github.com/launchx/china-pmf-monitoring-system#readme"
}