  "data_sources": {
    "china_sources": {
      "job_sites": [
        {
          "name": "智联招聘",
          "url": "https://www.zhaopin.com",
          "xpath_selectors": {
            "company_name": "//h3[@class='company-name']/a/text()",
            "job_title": "//h3[@class='job-title']/a/text()",
            "company_info": "//div[@class='company-info']//text()",
            "job_description": "//div[@class='job-detail']//text()"
          }
        },
        {
          "name": "拉勾网",
          "url": "https://www.lagou.com",
          "xpath_selectors": {
            "company_name": "//div[@class='company-name']/a/text()",
            "position_name": "//h3[@class='position-name']/text()",
            "company_stage": "//div[@class='company-stage']/text()",
            "salary": "//span[@class='salary']/text()"
          }
        }
      ],
      "news_sites": [
        {
          "name": "36氪",
          "url": "https://36kr.com",
          "xpath_selectors": {
            "article_title": "//h1[@class='article-title']/text()",
            "company_name": "//span[@class='company-name']/text()",
            "funding_info": "//div[@class='funding-info']//text()",
            "article_content": "//div[@class='article-content']//text()"
          }
        }
      ],
      "company_info_sites": [
        {
          "name": "企查查",
          "url": "https://www.qcc.com",
          "xpath_selectors": {
            "company_name": "//h1[@class='company-name']/text()",
            "registration_info": "//div[@class='registration-info']//text()",
            "business_scope": "//div[@class='business-scope']/text()",
            "financing_history": "//div[@class='financing-history']//text()"
          }
        }
      ]
    },
    
    "us_sources": {
      "job_sites": [
        {
          "name": "LinkedIn",
          "url": "https://www.linkedin.com",
          "xpath_selectors": {
            "company_name": "//h1[contains(@class, 'org-top-card-summary__title')]/text()",
            "company_size": "//dd[contains(@class, 'org-about-company-module__company-size-definition-term')]/text()",
            "industry": "//dd[contains(@class, 'org-about-company-module__company-industries-definition-term')]/text()",
            "job_postings": "//a[contains(@class, 'job-title-link')]/text()"
          }
        }
      ],
      "startup_sites": [
        {
          "name": "Crunchbase",
          "url": "https://www.crunchbase.com",
          "xpath_selectors": {
            "company_name": "//h1[@class='profile-name']/text()",
            "funding_rounds": "//div[@class='funding-round']//text()",
            "total_funding": "//span[@class='total-funding']/text()",
            "employee_count": "//span[@class='employee-count']/text()"
          }
        }
      ],
      "tech_news_sites": [
        {
          "name": "TechCrunch",
          "url": "https://techcrunch.com",
          "xpath_selectors": {
            "article_title": "//h1[@class='article-title']/text()",
            "company_mentions": "//a[contains(@href, '/company/')]/text()",
            "funding_amount": "//span[contains(text(), '$')]/text()"
          }
        }
      ]
    },
    
    "japan_sources": {
      "job_sites": [
        {
          "name": "リクナビ",
          "url": "https://job.rikunabi.com",
          "xpath_selectors": {
            "company_name": "//h1[@class='company-name']/text()",
            "job_title": "//h2[@class='job-title']/text()",
            "company_info": "//div[@class='company-info']//text()"
          }
        }
      ],
      "tech_news_sites": [
        {
          "name": "ITmedia",
          "url": "https://www.itmedia.co.jp",
          "xpath_selectors": {
            "article_title": "//h1[@class='article-title']/text()",
            "company_name": "//span[@class='company-name']/text()",
            "article_content": "//div[@class='article-body']//text()"
          }
        }
      ]
    }
