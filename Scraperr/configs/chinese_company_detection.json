  "confidence_scoring": {
    "high_confidence": {
      "min_score": 0.8,
      "criteria": "3个或以上信号维度命中，且包含姓名+教育背景"
    },
    "medium_confidence": {
      "min_score": 0.6,
      "criteria": "2个信号维度命中，包含姓名或地理位置"
    },
    "low_confidence": {
      "min_score": 0.4,
      "criteria": "1个信号维度命中，需要人工验证"
    }
  }
