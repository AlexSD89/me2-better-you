{
  "name": "多维度评分数据源配置",
  "version": "1.0",
  "description": "基于PocketCorn v4的MRR+媒体+赛道+认知四维度评分体系",
  "scoring_dimensions": {
    "mrr_dimension": {
      "weight": 0.4,
      "description": "基于MRR推断的财务评分",
      "data_sources": {
        "financial_indicators": {
          "direct_sources": [
            {
              "name": "公司官网定价页面",
              "patterns": ["pricing", "price", "定价", "价格", "套餐"],
              "xpath_selectors": [
                "//div[contains(@class, 'pricing')]//text()",
                "//span[contains(text(), '$') or contains(text(), '￥')]",
                "//div[contains(@id, 'price')]//text()"
              ]
            },
            {
              "name": "客户案例页面", 
              "patterns": ["case study", "customer", "客户案例", "成功案例"],
              "xpath_selectors": [
                "//div[contains(@class, 'case-study')]//text()",
                "//span[contains(text(), '节省') or contains(text(), 'save')]",
                "//div[contains(text(), 'ROI') or contains(text(), '回报')]"
              ]
            }
          ],
          
          "indirect_sources": [
            {
              "name": "招聘薪资信息",
              "weight": 0.3,
              "indicators": [
                "team_size_from_jobs", "average_salary", "senior_positions_count",
                "benefits_quality", "equity_offerings"
              ]
            },
            {
              "name": "办公规模信息",
              "weight": 0.2, 
              "indicators": [
                "office_locations", "office_size", "expansion_news",
                "real_estate_investment", "facilities_upgrade"
              ]
            },
            {
              "name": "技术投入信息",
              "weight": 0.25,
              "indicators": [
                "infrastructure_spending", "cloud_usage", "tool_subscriptions",
                "conference_sponsorships", "r_d_investment"
              ]
            },
            {
              "name": "市场活动信息", 
              "weight": 0.25,
              "indicators": [
                "marketing_spend", "conference_participation", "advertising_budget",
                "content_marketing_frequency", "social_media_activity"
              ]
            }
          ]
        },
        
        "revenue_validation": {
          "customer_count_sources": [
            "//span[contains(text(), '用户') and contains(text(), '万')]",
            "//div[contains(text(), 'customers') and contains(text(), 'thousand')]",
            "//text()[contains(., '服务') and contains(., '企业') and matches(., '\\d+')]"
          ],
          "growth_rate_sources": [
            "//span[contains(text(), '增长') and contains(text(), '%')]",
            "//div[contains(text(), 'growth') and contains(text(), '%')]",
            "//text()[contains(., 'YoY') or contains(., '同比')]"
          ]
        }
      },
      
      "scoring_algorithm": {
        "thresholds": {
          "excellent": {"mrr_min": 500000, "growth_min": 30},
          "good": {"mrr_min": 200000, "growth_min": 20},
          "average": {"mrr_min": 100000, "growth_min": 15},
          "poor": {"mrr_min": 50000, "growth_min": 10}
        }
      }
    },
    
    "media_dimension": {
      "weight": 0.2,
      "description": "基于媒体报道和社交媒体活跃度的品牌评分",
      "data_sources": {
        "traditional_media": [
          {
            "name": "科技媒体报道",
            "sources": ["36kr.com", "techcrunch.com", "itmedia.co.jp"],
            "xpath_selectors": [
              "//h1[contains(@class, 'title')]//text()",
              "//div[contains(@class, 'content')]//text()[contains(., 'funding') or contains(., '融资')]",
              "//span[contains(@class, 'tag')]//text()"
            ],
            "sentiment_analysis": {
              "positive_keywords": [
                "突破", "创新", "领先", "成功", "获得", "breakthrough", "innovative", 
                "leading", "successful", "raised", "growth", "expansion"
              ],
              "negative_keywords": [
                "困难", "挑战", "下降", "裁员", "crisis", "decline", "layoff", 
                "struggling", "challenges", "difficulties"
              ]
            }
          },
          
          {
            "name": "行业报告提及",
            "sources": ["iresearch.cn", "analysys.cn", "gartner.com", "forrester.com"],
            "authority_weight": 0.8,
            "mentions_tracking": [
              "//div[contains(@class, 'report')]//text()[contains(., company_name)]",
              "//table//td[contains(text(), company_name)]",
              "//li[contains(text(), company_name)]"
            ]
          }
        ],
        
        "social_media": [
          {
            "name": "微博影响力",
            "platform": "weibo.com",
            "metrics": ["followers_count", "posts_engagement", "mentions_count"],
            "xpath_selectors": [
              "//span[contains(@class, 'followers')]//text()",
              "//div[contains(@class, 'engagement')]//text()",
              "//span[contains(@class, 'like') or contains(@class, 'comment')]//text()"
            ]
          },
          
          {
            "name": "LinkedIn企业页面",
            "platform": "linkedin.com",
            "metrics": ["company_followers", "employee_activity", "post_engagement"],
            "xpath_selectors": [
              "//span[contains(@class, 'follower-count')]//text()",
              "//div[contains(@class, 'employee-count')]//text()",
              "//button[contains(@class, 'follow')]//text()"
            ]
          },
          
          {
            "name": "Twitter品牌活跃度",
            "platform": "twitter.com", 
            "metrics": ["followers_growth", "mention_sentiment", "hashtag_performance"],
            "api_endpoints": [
              "/2/users/by/username/{company_twitter}",
              "/2/tweets/search/recent?query={company_name}"
            ]
          }
        ],
        
        "content_marketing": [
          {
            "name": "技术博客质量",
            "indicators": ["blog_post_frequency", "technical_depth", "community_engagement"],
            "xpath_selectors": [
              "//article[contains(@class, 'blog-post')]",
              "//div[contains(@class, 'comments')]//text()",
              "//span[contains(@class, 'view-count')]//text()"
            ]
          },
          
          {
            "name": "开源项目影响力",
            "platforms": ["github.com", "gitlab.com", "gitee.com"],
            "metrics": ["stars_count", "forks_count", "contributors", "commit_activity"],
            "api_endpoints": [
              "https://api.github.com/repos/{owner}/{repo}",
              "https://api.github.com/repos/{owner}/{repo}/stats/contributors"
            ]
          }
        ]
      },
      
      "scoring_algorithm": {
        "media_score_calculation": {
          "traditional_media": 0.5,
          "social_media": 0.3, 
          "content_marketing": 0.2
        },
        "sentiment_weight": {
          "very_positive": 1.2,
          "positive": 1.0,
          "neutral": 0.8,
          "negative": 0.6,
          "very_negative": 0.4
        }
      }
    },
    
    "sector_dimension": {
      "weight": 0.25,
      "description": "基于行业趋势和市场机会的赛道评分",
      "data_sources": {
        "industry_trend_analysis": [
          {
            "name": "AI/ML行业趋势",
            "sources": ["ai-index.stanford.edu", "aiindex.org", "statista.com"],
            "trend_indicators": [
              "market_size_growth", "investment_volume", "patent_applications",
              "research_publications", "job_market_demand"
            ],
            "xpath_selectors": [
              "//div[contains(@class, 'market-size')]//text()",
              "//span[contains(text(), 'billion') or contains(text(), '亿')]",
              "//div[contains(@class, 'growth-rate')]//text()"
            ]
          },
          
          {
            "name": "SaaS市场分析",
            "sources": ["bessemer.com", "tomtunguz.com", "saasmetrics.co"],
            "metrics": ["arr_multiples", "growth_rates", "churn_benchmarks"],
            "trend_keywords": [
              "SaaS growth", "enterprise adoption", "digital transformation",
              "cloud migration", "subscription economy"
            ]
          }
        ],
        
        "competitive_landscape": [
          {
            "name": "竞争对手分析",
            "sources": ["crunchbase.com", "similarweb.com", "builtwith.com"],
            "competitive_metrics": [
              "market_share", "funding_rounds", "customer_overlap", "feature_comparison"
            ],
            "data_extraction": [
              "//div[contains(@class, 'competitor')]//text()",
              "//span[contains(@class, 'market-share')]//text()",
              "//div[contains(@class, 'funding')]//text()"
            ]
          },
          
          {
            "name": "技术栈趋势",
            "sources": ["stackoverflow.com", "github.com", "builtwith.com"],
            "technology_adoption": [
              "framework_popularity", "language_trends", "tool_adoption_rates"
            ],
            "api_sources": [
              "https://api.stackexchange.com/2.3/tags",
              "https://api.github.com/search/repositories"
            ]
          }
        ],
        
        "market_opportunity": [
          {
            "name": "TAM/SAM分析",
            "research_sources": ["gartner.com", "idc.com", "grandviewresearch.com"],
            "market_sizing": [
              "total_addressable_market", "serviceable_addressable_market",
              "serviceable_obtainable_market", "market_growth_cagr"
            ]
          },
          
          {
            "name": "监管环境",
            "sources": ["政府官网", "法规数据库", "行业协会"],
            "regulatory_factors": [
              "policy_support", "regulatory_barriers", "compliance_requirements",
              "government_initiatives", "industry_standards"
            ]
          }
        ]
      },
      
      "sector_scoring_model": {
        "hot_sectors": {
          "AI/ML": {"multiplier": 1.3, "keywords": ["artificial intelligence", "machine learning", "deep learning"]},
          "Enterprise_SaaS": {"multiplier": 1.2, "keywords": ["enterprise software", "B2B SaaS", "business automation"]},
          "Fintech": {"multiplier": 1.1, "keywords": ["financial technology", "digital payments", "blockchain"]},
          "Healthtech": {"multiplier": 1.1, "keywords": ["healthcare technology", "digital health", "medical AI"]},
          "Edtech": {"multiplier": 1.0, "keywords": ["education technology", "online learning", "e-learning"]}
        },
        
        "market_maturity": {
          "emerging": {"score_boost": 0.8, "risk_factor": 1.2},
          "growth": {"score_boost": 1.2, "risk_factor": 0.9},
          "mature": {"score_boost": 1.0, "risk_factor": 0.8},
          "declining": {"score_boost": 0.6, "risk_factor": 1.5}
        }
      }
    },
    
    "cognitive_dimension": {
      "weight": 0.15,
      "description": "基于团队背景和技术能力的认知评分",
      "data_sources": {
        "team_background": [
          {
            "name": "创始人履历",
            "sources": ["linkedin.com", "crunchbase.com", "公司官网"],
            "background_indicators": [
              "education_quality", "work_experience", "previous_exits",
              "industry_expertise", "technical_skills"
            ],
            "xpath_selectors": [
              "//div[contains(@class, 'education')]//text()",
              "//div[contains(@class, 'experience')]//text()",
              "//span[contains(@class, 'skills')]//text()",
              "//div[contains(@class, 'accomplishments')]//text()"
            ]
          },
          
          {
            "name": "技术团队实力",
            "github_analysis": {
              "metrics": ["contributions", "code_quality", "open_source_activity"],
              "api_endpoints": [
                "https://api.github.com/users/{username}/repos",
                "https://api.github.com/repos/{owner}/{repo}/contributors"
              ]
            },
            "conference_speaking": {
              "sources": ["技术会议网站", "YouTube", "Slideshare"],
              "speaking_indicators": [
                "keynote_speeches", "technical_presentations", "workshop_leadership"
              ]
            }
          }
        ],
        
        "technical_innovation": [
          {
            "name": "专利和知识产权",
            "sources": ["patents.google.com", "uspto.gov", "国家知识产权局"],
            "ip_metrics": [
              "patent_count", "patent_quality", "citation_count", "invention_level"
            ],
            "api_sources": [
              "https://patents.google.com/",
              "https://developer.uspto.gov/api-catalog"
            ]
          },
          
          {
            "name": "学术影响力", 
            "sources": ["scholar.google.com", "arxiv.org", "researchgate.net"],
            "academic_metrics": [
              "publication_count", "citation_index", "h_index", "research_impact"
            ],
            "research_quality_indicators": [
              "top_venue_publications", "collaboration_network", "research_funding"
            ]
          }
        ],
        
        "industry_recognition": [
          {
            "name": "行业奖项",
            "award_sources": ["行业协会", "评选机构", "媒体奖项"],
            "recognition_types": [
              "innovation_awards", "entrepreneur_awards", "technical_excellence",
              "industry_recognition", "startup_competitions"
            ]
          },
          
          {
            "name": "投资机构背景",
            "investor_quality": {
              "tier1_investors": ["红杉", "IDG", "经纬", "Sequoia", "A16Z", "GGV"],
              "tier2_investors": ["知名天使投资人", "产业投资基金"],
              "investor_value_add": ["资源对接", "战略指导", "品牌背书"]
            }
          }
        ]
      },
      
      "cognitive_scoring_model": {
        "team_quality_weight": {
          "founder_background": 0.4,
          "technical_team": 0.3,
          "innovation_capability": 0.2,
          "industry_recognition": 0.1
        },
        
        "education_tier_scoring": {
          "tier1_universities": {"score": 1.0, "universities": ["清华", "北大", "Stanford", "MIT", "Harvard"]},
          "tier2_universities": {"score": 0.8, "universities": ["复旦", "交大", "Berkeley", "CMU", "Caltech"]},
          "tier3_universities": {"score": 0.6, "universities": ["其他985", "其他top50"]}
        }
      }
    }
  },
  
  "comprehensive_scoring": {
    "final_score_calculation": {
      "weighted_sum": "mrr_score * 0.4 + media_score * 0.2 + sector_score * 0.25 + cognitive_score * 0.15",
      "normalization": "min_max_scaling_to_0_100",
      "confidence_adjustment": "score * confidence_factor"
    },
    
    "ranking_system": {
      "s_tier": {"score_range": [90, 100], "description": "顶级投资标的"},
      "a_tier": {"score_range": [80, 90], "description": "优质投资标的"},
      "b_tier": {"score_range": [70, 80], "description": "良好投资标的"},
      "c_tier": {"score_range": [60, 70], "description": "一般投资标的"},
      "d_tier": {"score_range": [0, 60], "description": "不推荐投资"}
    },
    
    "quality_assurance": {
      "data_freshness_check": "max_age_7_days",
      "source_reliability_weight": "high_trust_1.0_medium_0.8_low_0.6",
      "cross_validation": "require_2_sources_minimum",
      "human_review_triggers": ["score_change_>10", "new_s_tier_candidate", "conflicting_signals"]
    }
  }
}