{
  "name": "MRR智能推断信号采集配置",
  "version": "1.0", 
  "description": "基于PocketCorn v4方法论的MRR推断信号采集规则",
  "target_mrr_threshold": 50000,
  "target_growth_rate": 0.15,
  
  "signal_categories": {
    "recruiting_signals": {
      "description": "招聘信号 - 通过招聘活动推断企业规模和增长",
      "weight": 0.3,
      "indicators": {
        "job_posting_frequency": {
          "patterns": [
            "急招.*工程师", "高薪诚聘", "大量招聘", "扩招", "team is growing",
            "we are hiring", "join us", "hiring spree", "rapid expansion",
            "scaling team", "growing fast", "urgent hiring"
          ],
          "xpath_selectors": [
            "//div[contains(@class, 'job-post')]//text()[contains(., 'urgent') or contains(., '急')]",
            "//span[contains(@class, 'salary')]//text()",
            "//div[contains(@class, 'job-count')]//text()"
          ],
          "scoring_rules": {
            "high": {"job_count": ">10", "urgency_keywords": ">3", "salary_range": ">30万"},
            "medium": {"job_count": "5-10", "urgency_keywords": "1-3", "salary_range": "20-30万"},
            "low": {"job_count": "1-5", "urgency_keywords": "0-1", "salary_range": "<20万"}
          }
        },
        
        "technical_roles": {
          "high_value_positions": [
            "首席技术官", "CTO", "技术总监", "Tech Lead", "架构师", "Architect",
            "AI工程师", "AI Engineer", "算法工程师", "Algorithm Engineer",
            "机器学习工程师", "Machine Learning Engineer", "深度学习", "Deep Learning",
            "高级工程师", "Senior Engineer", "资深工程师", "Staff Engineer"
          ],
          "salary_indicators": [
            "年薪.*[5-9]\\d万", "年薪.*[1-2]\\d\\d万", "\\$[8-9]\\d,000", "\\$1[0-5]\\d,000",
            "stock options", "equity", "期权", "股权", "RSU"
          ],
          "benefits_indicators": [
            "五险一金", "补充医疗", "弹性工作", "remote work", "flexible hours",
            "learning budget", "conference budget", "培训预算", "学习津贴"
          ]
        }
      }
    },
    
    "product_signals": {
      "description": "产品信号 - 通过产品迭代和用户反馈推断业务活跃度",
      "weight": 0.25,
      "indicators": {
        "product_updates": {
          "patterns": [
            "版本.*更新", "新功能", "feature.*release", "product update",
            "v[0-9]\\.[0-9]", "changelog", "release notes", "更新日志",
            "bug.*fix", "性能.*优化", "performance improvement"
          ],
          "frequency_scoring": {
            "high": "weekly_updates",
            "medium": "monthly_updates", 
            "low": "quarterly_updates"
          }
        },
        
        "user_feedback": {
          "positive_indicators": [
            "好评", "推荐", "五星", "excellent", "amazing", "love it",
            "game changer", "must have", "很实用", "效率.*提升", "节省.*时间"
          ],
          "negative_indicators": [
            "差评", "bug", "crash", "slow", "expensive", "不好用", "问题.*多"
          ],
          "engagement_indicators": [
            "日活", "月活", "DAU", "MAU", "用户增长", "user growth",
            "retention", "用户留存", "续费", "renewal", "upgrade"
          ]
        },
        
        "integration_signals": {
          "api_usage": [
            "API调用", "API calls", "third party", "integration",
            "webhook", "SDK", "开放平台", "developer platform"
          ],
          "partnership": [
            "合作伙伴", "partner", "integration with", "works with",
            "ecosystem", "生态", "marketplace", "应用市场"
          ]
        }
      }
    },
    
    "customer_signals": {
      "description": "客户信号 - 通过客户规模和类型推断收入水平",
      "weight": 0.3,
      "indicators": {
        "customer_base": {
          "enterprise_clients": [
            "大客户", "enterprise", "fortune 500", "上市公司", "世界500强",
            "银行", "保险", "制造业", "retail", "healthcare", "金融",
            "政府", "government", "教育", "education", "医疗", "医院"
          ],
          "client_testimonials": [
            "客户.*案例", "case study", "success story", "客户见证",
            "testimonial", "客户评价", "使用.*效果", "ROI.*提升"
          ],
          "client_count_indicators": [
            "服务.*\\d+.*客户", "\\d+.*企业.*选择", "serve.*\\d+.*clients",
            "\\d+.*companies.*trust", "用户.*突破.*\\d+万", "\\d+万.*用户"
          ]
        },
        
        "pricing_signals": {
          "subscription_models": [
            "订阅", "subscription", "月费", "年费", "SaaS", "按月付费",
            "monthly", "annually", "enterprise plan", "企业版", "专业版"
          ],
          "pricing_tiers": [
            "免费版", "基础版", "专业版", "企业版", "free", "basic", "pro", "enterprise",
            "starter", "premium", "定制", "custom", "按需", "on-demand"
          ],
          "revenue_indicators": [
            "月收入", "年收入", "ARR", "MRR", "revenue", "营收",
            "billing", "payment", "checkout", "付费用户", "paying customers"
          ]
        }
      }
    },
    
    "technology_signals": {
      "description": "技术信号 - 通过技术活跃度推断研发投入",
      "weight": 0.15,
      "indicators": {
        "github_activity": {
          "commit_frequency": [
            "commits?.*per.*week", "daily.*commits?", "active.*development",
            "代码.*提交", "开发.*活跃", "持续.*集成"
          ],
          "repository_indicators": [
            "stars?.*\\d+k?", "forks?.*\\d+k?", "contributors?.*\\d+",
            "开源项目", "open source", "github.*trending"
          ],
          "tech_stack": [
            "React", "Vue", "Angular", "Node.js", "Python", "Go", "Rust",
            "Docker", "Kubernetes", "AWS", "Azure", "GCP", "微服务", "microservices"
          ]
        },
        
        "patent_and_ip": {
          "patent_applications": [
            "专利.*申请", "patent.*application", "知识产权", "intellectual property",
            "发明专利", "invention patent", "软件著作权", "copyright"
          ],
          "technical_publications": [
            "技术博客", "tech blog", "技术分享", "technical sharing",
            "conference.*talk", "会议.*演讲", "论文发表", "research paper"
          ]
        }
      }
    }
  },
  
  "mrr_calculation_models": {
    "regression_model": {
      "description": "基于历史数据的回归模型",
      "features": [
        "job_posting_count", "average_salary", "team_size_estimate",
        "product_update_frequency", "user_feedback_score", "customer_testimonial_count",
        "enterprise_client_ratio", "github_stars", "patent_count"
      ],
      "coefficients": {
        "job_posting_count": 2500,
        "average_salary": 0.15,
        "team_size_estimate": 8000,
        "product_update_frequency": 1200,
        "user_feedback_score": 500,
        "customer_testimonial_count": 3000,
        "enterprise_client_ratio": 15000,
        "github_stars": 10,
        "patent_count": 5000
      }
    },
    
    "rule_based_model": {
      "description": "基于业务规则的推断模型",
      "rules": [
        {
          "condition": "enterprise_clients > 5 AND team_size > 20",
          "mrr_estimate": "100000-500000",
          "confidence": 0.85
        },
        {
          "condition": "job_postings > 10 AND high_salary_positions > 3",
          "mrr_estimate": "80000-300000", 
          "confidence": 0.75
        },
        {
          "condition": "product_updates_monthly > 2 AND positive_feedback > 80%",
          "mrr_estimate": "50000-200000",
          "confidence": 0.65
        },
        {
          "condition": "github_stars > 1000 AND active_contributors > 10",
          "mrr_estimate": "30000-150000",
          "confidence": 0.55
        }
      ]
    },
    
    "ensemble_model": {
      "description": "综合多个模型的预测结果",
      "models": ["regression_model", "rule_based_model"],
      "weights": [0.6, 0.4],
      "confidence_threshold": 0.7
    }
  },
  
  "data_collection_strategies": {
    "batch_collection": {
      "description": "批量数据收集策略",
      "frequency": "daily",
      "sources": ["job_sites", "company_websites", "news_sites", "github"],
      "rate_limits": {
        "requests_per_minute": 60,
        "concurrent_requests": 10,
        "retry_attempts": 3
      }
    },
    
    "real_time_monitoring": {
      "description": "实时监控策略",
      "triggers": ["new_job_posting", "product_update", "funding_news", "github_release"],
      "alert_thresholds": {
        "high_priority": "mrr_estimate > 200000",
        "medium_priority": "mrr_estimate > 100000", 
        "low_priority": "mrr_estimate > 50000"
      }
    },
    
    "targeted_deep_dive": {
      "description": "针对高价值目标的深度调研",
      "triggers": ["high_mrr_estimate", "recent_funding", "viral_product"],
      "additional_sources": ["crunchbase", "linkedin_company", "glassdoor", "similarweb"]
    }
  },
  
  "quality_validation": {
    "data_freshness": {
      "max_age_days": 7,
      "preferred_age_hours": 24
    },
    
    "source_reliability": {
      "high_trust": ["official_company_website", "crunchbase", "linkedin"],
      "medium_trust": ["tech_news_sites", "job_boards"],
      "low_trust": ["social_media", "forums", "blogs"]
    },
    
    "cross_validation": {
      "min_sources": 2,
      "consensus_threshold": 0.8,
      "conflict_resolution": "weighted_average"
    }
  }
}